<odoo>
    <data>
        <template id="assets" name="construction_extranet_assets">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
        
            <link href="https://fonts.googleapis.com/css?family=Heebo:300,400,500,700,800,900&amp;display=swap" rel="stylesheet"/>
        	  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous"/>
        </template>
        
        <template id="layout_container" name="Construction Layout Container">
            <html lang="fr">
                <head>
                    <!-- set the encoding of your site -->
                	<meta charset="utf-8"/>
                	<!-- set the viewport width and initial-scale on mobile devices -->
                	<meta name="viewport" content="width=device-width, initial-scale=1"/>
                	<title>Extranet Suivi</title>
                	<t t-call-assets="construction_extranet.assets"/>
                </head>
                <body>
                    <div class="container">
                        <!-- Content here -->
                        <t t-raw="0"/>
                    </div>
                </body>
            </html>
        </template>
        
        <template id="invoices" name="Construction Layout Container">
            <t t-call="construction_extranet.layout_container">
                <div class="row">
                    <h1><span t-field="company_id.name"/></h1>
                </div>
                <div class="row table-responsive-lg">
                    <h3>Factures en attente</h3>
                    <table class="table table-striped">
                      <thead>
                        <tr class="thead-dark">
                          <th scope="col">#</th>
                          <th scope="col">Client</th>
                          <th scope="col">Description</th>
                          <th class="text-right" scope="col">Montant</th>
                          <th scop="col"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr t-foreach="draft_invoice_ids" t-as="invoice">
                          <th scope="row"><span t-field="invoice.name"/></th>
                          <td><span t-field="invoice.partner_id"/></td>
                          <td><span t-field="invoice.summary"/></td>
                          <td class="align-right"><span t-field="invoice.amount_untaxed"/></td>
                          <td><a t-att-href="'/invoice_original/%s' % invoice.id" target="_new"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-circle" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V4.5z"/>
</svg></a></td>
                        </tr>
                        <tr class="thead-dark">
                          <th scope="row"></th>
                          <th></th>
                          <th></th>
                          <th class="align-right font-weight-bold"><span t-esc="sum(draft_invoice_ids.mapped('amount_untaxed'))" t-options="{'widget': 'monetary', 'display_currency': company_id.currency_id}"/></th>
                          <th></th>
                        </tr>
                      </tbody>
                    </table>
                </div>
                <div class="row table-responsive-lg">
                    <h3>Factures ouvertes</h3>
                    <table class="table table-striped">
                      <thead>
                        <tr class="thead-dark">
                          <th scope="col">#</th>
                          <th scope="col">Client</th>
                          <th scope="col">Date</th>
                          <th scope="col">Description</th>
                          <th class="text-right" scope="col">Montant</th>
                          <th scop="col"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr t-foreach="open_invoice_ids" t-as="invoice">
                          <th scope="row"><span t-field="invoice.name"/></th>
                          <td><span t-field="invoice.partner_id"/></td>
                          <td><span t-field="invoice.date"/></td>
                          <td><span t-field="invoice.summary"/></td>
                          <td class="align-right"><span t-field="invoice.amount_residual"/></td>
                          <td><a t-att-href="'/invoice_original/%s' % invoice.id" target="_new"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-circle" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V4.5z"/>
</svg></a></td>
                        </tr>
                        <tr class="thead-dark">
                          <th scope="row"></th>
                          <th></th>
                          <th></th>
                          <th></th>
                          <th class="align-right font-weight-bold"><span t-esc="sum(open_invoice_ids.mapped('amount_untaxed'))" t-options="{'widget': 'monetary', 'display_currency': company_id.currency_id}"/></th>
                          <th></th>
                        </tr>
                      </tbody>
                    </table>
                </div>
                <div class="row table-responsive-lg">
                    <h3>Factures pay√©es</h3>
                    <table class="table table-striped">
                      <thead>
                        <tr class="thead-dark">
                          <th scope="col">#</th>
                          <th scope="col">Client</th>
                          <th scope="col">Date</th>
                          <th scope="col">Description</th>
                          <th class="text-right" scope="col">Montant</th>
                          <th scop="col"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr t-foreach="paid_invoice_ids" t-as="invoice">
                          <th scope="row"><span t-field="invoice.name"/></th>
                          <td><span t-field="invoice.partner_id"/></td>
                          <td><span t-field="invoice.date"/></td>
                          <td><span t-field="invoice.summary"/></td>
                          <td class="align-right"><span t-field="invoice.amount_untaxed"/></td>
                          <td><a t-att-href="'/invoice_original/%s' % invoice.id" target="_new"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-circle" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V4.5z"/>
</svg></a></td>
                        </tr>
                        <tr class="thead-dark">
                          <th scope="row"></th>
                          <th></th>
                          <th></th>
                          <th></th>
                          <th class="align-right font-weight-bold"><span t-esc="sum(paid_invoice_ids.mapped('amount_untaxed'))" t-options="{'widget': 'monetary', 'display_currency': company_id.currency_id}"/></th>
                          <th></th>
                        </tr>
                      </tbody>
                    </table>
                </div>
            </t>
        </template>
        
    </data>
</odoo>